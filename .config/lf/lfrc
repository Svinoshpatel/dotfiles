# Basic Settings
set ignorecase true
set icons true
set globsearch true
set scrolloff 8
set previewer ctpv
set cleaner ctpvclear
&ctpv -s $id
&ctpvquit $id

# Custom Functions
cmd mkdir ${{
  printf "Directory Name: "
  read ans
  mkdir $ans
}}

cmd mkfile ${{
  printf "File Name: "
  read ans
  $(touch $ans)
}}

# Archive bindings
cmd unarchive ${{
  case "$f" in
      *.zip) unzip "$f" ;;
      *.tar.gz) tar -xzvf "$f" ;;
      *.tar.bz2) tar -xjvf "$f" ;;
      *.tar) tar -xvf "$f" ;;
      *) echo "Unsupported format" ;;
  esac
}}

# Trash bindings
cmd trash ${{
  files=$(printf "$fx" | tr '\n' ';')
  while [ "$files" ]; do
    file=${files%%;*}

    trash-put "$(basename "$file")"
    if [ "$files" = "$file" ]; then
      files=''
    else
      files="${files#*;}"
    fi
  done
}}

cmd restore_trash ${{
  trash-restore
}}

# Draagon
cmd dragon %dragon -a -x $fx
# Remove bindings
map d
map m

# Archive
map au unarchive

# Use enter for shell commands
map <enter> shell

# show the result of execution of previous commands
map ` !true

# Execute current file
map X !$f

# dedicated keys for file opener actions
map o $mimeopen $f &
map O $mimeopen --ask $f

# Basic Functions
map mf mkfile
map md mkdir
map x cut
map dd trash
map dr restore_trash

# Movement
map gD cd ~/Documents
map gd cd ~/Downloads
map gp cd ~/Pictures
map gc cd ~/.config
map gv cd ~/Videos
map gt cd ~/.local/share/Trash/files
map gG cd ~/Git

# Dragon keybindings
map dg dragon
